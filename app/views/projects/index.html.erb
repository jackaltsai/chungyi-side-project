<div class="container">
<div class="row row-cols-1 row-cols-md-3 g-4">
<% @projects.each do |project| %>
  <div class="col" style="padding-top: 30px">
    <div class="card">
        <div class="card-img-top text-center" style="padding-top: 15px">
            <%= image_tag project.image.url, width: '300px', height: '385px' %>
        </div>
      
      <div class="card-body">
        <h5 class="card-title" style="padding-top: 15px"><%= project.name %></h5>
        <p class="card-text" style="padding-top: 15px"><%= project.description %></p>
      </div>
      
    </div>
  </div>
<% end %>
  
  
</div>
</div>